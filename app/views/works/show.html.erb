<h2><%= @work.title %></h2>
<h3>by <%= link_to @work.author.name, @work.author %></h3>

<br/>

<%= iphone_display @work.body %>

<i>Read by <%= @work.reader %></i>

<br/><br/>

<i>Published in <%= link_to @work.issue.title, @work.issue %></i>

<% if @work.submission %>
  <br/><br/>
  <i>Originally submitted as <%= link_to @work.submission.title, @work.submission %> by <%= @work.submission.user.name %></i>
<% end %>

<br/><br/>

<p>
  <%= link_to "Edit", edit_work_path(@work) %>
</p>