<h2>Issues</h2>

<% if @issues.empty? %>
  <p>
    No issues.
  </p>
<% else %>
  <table>
    <tr>
      <th>#</th>
      <th>Title</th>
      <th>Subtitle</th>
      <th>Color</th>
      <th>Publish Date</th>
    </tr>
    <% @issues.each do |issue| %>
      <tr>
        <td><%= link_to issue.number, [:admin, issue] %></td>
        <td><%= link_to truncate(issue.title, :length => 100), [:admin, issue] %></td>
        <td><%= truncate issue.subtitle, :length => 100 %></td>
        <td style="background-color:#<%= issue.color %>;"><%= issue.color %></td>
        <td><%= issue.published? ? issue.published_at.to_s(:short) : "ready check?" %></td>
      </tr>
    <% end %>
  </table>
  <%= will_paginate @issues %>
<% end %>


<%= link_to "New Issue", new_admin_issue_path %>