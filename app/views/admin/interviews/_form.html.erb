<% form_for [:admin, @interview], :html => { :multipart => true } do |f| -%>
  <div>
    <%= f.label :number %>
    <br/>
    <%= f.text_field :number, :class => "text" %>
    <%= f.error_message_on :number %>
  </div>
  
  <div>
    <%= f.label :author_id %>
    <br/>
    <%= f.select :author_id, authors_options %>
    <%= f.error_message_on :author_id %>
  </div>
  
  <div>
    <%= f.label :date %>
    <br/>
    <%= f.text_field :date, :class => "text" %>
    <%= f.error_message_on :date %>
  </div>
  
  <div>
    <%= f.label :body %>
    <br/>
    <%= f.text_area :body, :class => "textarea" %>
    <%= f.error_message_on :body %>
  </div>
  
  <br/> 
  
  <p><%= submit_tag 'Submit', :class => "button" %></p>
<% end -%>
