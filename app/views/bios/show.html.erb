<div id="issue-header" class="interior-header">
	<div id="header-text">
		<h3>My Bio</h3>
		<span>Just a little extra information we hope you'll share</span>
	</div>
</div>

<div id="interior-body">

  <% if @bio.new_record? %>
    <p>
      You have not set your bio information yet!  <%= link_to "Create it here.", new_bio_path %>
    </p>
  <% else %>
    <p>
      <b>Name:</b> <%= @bio.name %>
    </p>
    <p>
      <b>Phone Number:</b> <%= @bio.phone %>
    </p>
    <p>
      <b>Bio:</b>
      <% if @bio.body.blank? %>
          <i>not set</i>
      <% else %>
        <%= @bio.body %>
      <% end %>
    </p>
    <p>
      <%= link_to "Edit", edit_bio_path %>
    </p>
  <% end %>
  
</div>