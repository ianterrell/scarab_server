<h2>Issue <%= @issue.number %></h2>
<h3><%= @issue.title %></h3>
<%= @issue.subtitle %>

<br/><br/>

<div id="issue-description">
  <%= @issue.description %>
</div>

<br/><br/>

Color: <span style="background-color:#<%= @issue.color %>;"><%= @issue.color %></span>

<br/><br/>

<h4>Works</h4>
<ul>
  <% @issue.works.each do |work| %>
    <li><%= link_to work.title, work %> by <%= link_to work.author.name, work.author %></li>
  <% end %>
</ul>

<p>
  <%= link_to "Edit", edit_issue_path(@issue) %>
</p>